{% extends "themes/base_user.html.twig" %}

{% block title %} - Espace privé{% endblock %}

{% block description %}Votre espace privé{% endblock %}



{% block main %}

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <h1 class="text-center my-3 display-5">Hello {{app.user.firstName}} {{app.user.lastName}}</h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center align-items-center my-3">
                <div class="card text-bg-light my-3 w-100 h-100">
                    <div class="card-header">Nombre total de commentaires</div>
                    <div class="card-body">
                        <p class="card-text">{{app.user.comments|length}}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center my-3">
                <div class="card text-bg-light my-3 w-100 h-100">
                    <div class="card-header">Nombre total de likes</div>
                    <div class="card-body">
                        <p class="card-text">{{app.user.postLikes|length}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

{% endblock %}

