{% extends "themes/base_admin.html.twig" %}

{% block title %}liste des articles{% endblock %}

{% block description %}liste des articles{% endblock %}

{# jQuery #}
{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{# Datatables #}
{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json',
                },
            });
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5 texte-rose">liste des articles</h1>

    {% include "components/alert.html.twig" with {'type': 'success'}  %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin.post.create')}}" class="btn btn-rose"><i class="fa-solid fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Tags</th>
                    <th>Status</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{post.id}}</td>
                        <td>
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_images') }}" alt="{{ post.title }}">
                            {% else %}
                                <p>---</p>
                            {% endif %}
                        </td>
                        <td>{{post.title}}</td>
                        <td>{{post.category.name}}</td>
                        <td>
                            {% for tag in post.tags %}
                                <span class="badge text-bg-secondary mx-1">{{tag.name}}</span>
                            {% endfor %}
                        </td>
                        <td class="text-center">
                            {% if post.isPublished %}
                                <p>Publié le {{post.publishedAt|format_date()}}</p>
                            {% else %}
                                <p>Pas encore</p>
                            {% endif %}
                            <form method="POST" action="{{path('admin.post.publish', {'id':post.id})}}">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('publish_post'~post.id)}}">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="d-flex justify-content-center align-items-center form-check form-switch">
                                    <input onclick="return confirm('Confirmer cette action?')" onchange="this.form.submit();" class="form-check-input" type="checkbox" role="switch" id="checked_{{post.id}}" {{ post.isPublished ? 'checked' : '' }}>
                                    <label class="form-check-label" for="checked_{{post.id}}"></label>
                                </div>
                            </form>
                        </td>
                        <td>
                            <a title="Lire {{post.title}}" href="{{path('admin.post.show', {'id':post.id})}}">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                        </td>
                        <td>{{post.createdAt|format_date()}}</td>
                        <td>{{post.updatedAt|format_date()}}</td>
                        <td>
                            <a class="text-secondary mx-2" href="{{path('admin.post.edit', {'id': post.id})}}" title="Modifier {{post.title}}"><i class="fas fa-edit"></i></a>
                            <a onclick="event.preventDefault(); return confirm('Confirmer la suppression?') && document.querySelector('#delete_post_form_{{post.id}}').submit();" class="text-danger mx-2" href="#" title="Supprimer {{post.title}}"><i class="fa-solid fa-trash"></i></a>
                            <form method="POST" action="{{path('admin.post.delete', {'id':post.id})}}" id="delete_post_form_{{post.id}}">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete_post_'~post.id)}}">
                                <input type="hidden" name="_method" value="DELETE">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}