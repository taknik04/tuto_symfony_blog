{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifier l'article:{{post.title}} {% endblock %}

{% block description %}Modifier cet article{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

  {# The text editor #}
    {% block tinyMCE %}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
      tinymce.init({
       selector: 'textarea#post_form_content'
      });
</script>
    {% endblock %}

    {% block select2 %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#post_form_tags').select2();
        });
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier cet article</h1>

    <div class="container">
       <div class="row ">
           <div class="col-md-9 mx-auto">
           {{form_start(form)}}
                  <div class="mb-3">
                       <label for="post_form_title">Titre</label>
                       <div class="text-danger">{{form_errors(form.title)}}</div>
                       {{form_widget(form.title, {"attr": {'class': 'form-control', 'autofocus':'autofocus'}})}} 
                  </div>
 
                  <div class="mb-3">
                                  <label for="post_form_category">Catégorie</label>
                                  <div class="text-danger">{{form_errors(form.category)}}</div>
                          {{form_widget(form.category, {"attr": {'class': 'form-control'}})}}
                                  </div>

                                  <div class="mb-3">
                        <label for="post_form_tags">Tags</label>
                        <div class="text-danger">{{form_errors(form.tags)}}</div>
                        {{form_widget(form.tags, {'attr': {'class': 'form-control'}})}}
                    </div>
                  

                    <div class="row mb-3">
                           <div class="col-md-4">
                          {#Apperçu de l'image actuelle#}
                          <div class="preview-image-title"></div>
                            <div class="preview-image-content"></div>
                          {% if post.image %}
                          <p class="text-center">Image actuelle</p>
                            <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile')}}" alt="{{ post.title }}">
                            {% else %}
                            <p class="text-center">Aucune image existante</p>
                           {% endif %}
                        
                           </div>

                           <div class="col-md-4">
                                  <label for="post_form_imageFile_file">Modifier l'image</label>
                                  <div class="text-danger">{{form_errors(form.imageFile)}}</div>
                                  {{form_widget(form.imageFile, {"attr": {'class': 'form-control mt-4 mb-3'}})}}
                            </div>
                            <div class="col-md-4">
                               {#Apperçu de la nouvelle image à uploader#}
                            </div>
                           </div>

                            <div class="mb-3">
                             <label for="post_form_content">Contenu</label>
                                  <div class="text-danger">{{form_errors(form.content)}}</div>
                                  {{form_widget(form.content, {"attr": {'class': 'form-control'}})}}
                           </div>
                              <div>
                                 <input formnovalidate type="submit" class="btn btn-primary"
                              </div>
           {{form_end(form)}}
             
           </div>
       </div>
    </div>
    {% endblock %}
    {% block javascripts %}
    <script>
        $(document).ready(function () {
            
            $("#post_form_imageFile_file").on('change', function(){
                let file = $(this).get(0).files[0];

                if (file) 
                {
                    let fileReader = new FileReader();

                    fileReader.onload = function(){

                        let p   = `<p>Aperçu de l'image</p>`;
                        let img = `<img src="${fileReader.result}" class="img-fluid" alt="Prévisualisation de l'image de l'article."/>`;

                        $('.preview-image-title').html(p);
                        $('.preview-image-content').html(img);
                    };

                    fileReader.readAsDataURL(file);
                }
            });
        });
    </script>
{% endblock %}
